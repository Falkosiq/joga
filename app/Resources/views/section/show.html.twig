{% extends 'admin/base.html.twig' %}

{% block body %}
    <h1>Section</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ section.content|nl2br }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img class="img-responsive" width="200" src="{{ asset('img/' ~ section.photo) }}"></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ section.title }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_section_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_section_edit', { 'id': section.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
