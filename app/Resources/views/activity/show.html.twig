{% extends 'admin/base.html.twig' %}
{%  block head %}
 {{ parent() }}
{%  endblock %}
{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Dzień</th>
                <td>{{ activity.day }}</td>
            </tr>
            <tr>
                <th>Godzina</th>
                <td>{{ activity.hour }}</td>
            </tr>
            <tr>
                <th>Rodzaj zajęć</th>
                <td>{{ activity.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_activity_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('admin_activity_edit', { 'id': activity.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
